<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ecocheck.ecocheck.FindFactory" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/AddFactoryPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="חפש מפעל"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#D50000" />

        <TextView
            android:id="@+id/Factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/AddFactoryPage"
            android:layout_marginTop="22dp"
            android:text="מפעל"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/Branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Factory"
            android:layout_marginTop="22dp"
            android:text="סניף"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Branch"
            android:layout_marginTop="22dp"
            android:text="ישוב"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/Adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/City"
            android:layout_marginTop="22dp"
            android:text="כתובת"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Adress"
            android:layout_marginTop="22dp"
            android:text="טלפון"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/FaxNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/PhoneNumber"
            android:layout_marginTop="22dp"
            android:text="פקס"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/ContactPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/FaxNumber"
            android:layout_marginTop="22dp"
            android:text="איש קשר"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/MailingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ContactPerson"
            android:layout_marginTop="22dp"
            android:text="מען למכתבים"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/NumberOfEmployees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/MailingAddress"
            android:layout_marginTop="22dp"
            android:text="מספר עובדים"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/Inspector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/NumberOfEmployees"
            android:layout_marginTop="22dp"
            android:text="מפקח"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/SearchFactory"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Inspector"
            android:layout_marginTop="22dp"
            android:background="#ffcddfe8"
            android:clickable="true"
            android:text="Search" />

        <EditText
            android:id="@+id/editText_Factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Branch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10" />

        <EditText
            android:id="@+id/editText_Branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Branch"
            android:layout_alignEnd="@+id/editText_Factory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText_Factory" />

        <EditText
            android:id="@+id/editText_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/City"
            android:layout_alignEnd="@+id/editText_Branch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText_Branch" />

        <EditText
            android:id="@+id/editText_Adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Adress"
            android:layout_alignEnd="@+id/editText_City"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText_City" />

        <EditText
            android:id="@+id/editText_PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/FaxNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText_FaxNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/FaxNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText_ContactPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MailingAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_MailingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/MailingAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editText_NumberOfEmployees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/NumberOfEmployees"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_Inspector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_NumberOfEmployees"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>

</ScrollView>
