<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ecocheck.ecocheck.AddNewFactory"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="הוסף מפעל"
            android:id="@+id/AddFactoryPage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#D50000" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:paddingTop="1dp"
            android:stretchColumns="0"
            android:id="@+id/tlTableAddFactory"
            android:layout_below="@+id/AddFactoryPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_AfikNumber"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="מספר אפיק"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_Factory"

                     />

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="מפעל"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_Branch"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="סניף"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_City"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="ישוב"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_Adress"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="כתובת"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_PhoneNumber"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="טלפון"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_FaxNumber"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="פקס"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_ContactPerson"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="איש קשר"
                    />

            </TableRow>

            <TableRow
            android:background="#CCC"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">

            <EditText
                android:layout_marginRight="1dp"
                android:padding="5dp"
                android:background="#FFF"
                android:id="@+id/editText_MailingAddress"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="מען למכתבים"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_NumberOfEmployees"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="מספר עובדים"
                    />

            </TableRow>

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">

                <EditText
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:id="@+id/editText_Inspector"/>

                <TextView
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:text="מפקח"
                    />

            </TableRow>


        </TableLayout>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="הוסף מפעל"
            android:id="@+id/AddFactory"
            android:background="#ffcddfe8"
            android:clickable="true"
            android:layout_below="@+id/tlTableAddFactory"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</ScrollView>
